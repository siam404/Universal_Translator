
{
    "manifest_version": 2,
    "name": "English to Bangla Translator",
    "version": "1.0",
    "description": "Translate selected English text to Bangla",
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "permissions": [
      "activeTab",
      "contextMenus",
      "storage",
      "https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent"
    ],
    "browser_action": {
      "default_icon": {
        "48": "icons/icon-48.png"
      },
      "default_popup": "popup/popup.html",
      "default_title": "English to Bangla Translator"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
      }
    ]
  }